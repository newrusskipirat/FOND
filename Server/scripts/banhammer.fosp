class Ban
{
	
	uint Id;
	uint Ip;
	uint Mask;
	
	uint8 BanFlags;
	
	uint Begin;
	uint End;
	
	uint Author;
	string Reason;
	string Comment;
	
	uint Counter;
	
	Ban()
	{
		Id=0;
		Ip=0;
		Mask=0;
		BanFlags=0;
		Begin=0;
		End=0;
		Author=0;
		Counter=0;
	}
	
	bool CheckBase()
	{
		if((Id==0&&Ip==0)or
		(((BanFlags)&((0x8)))!=0)or
		(((BanFlags)&((0x10)))!=0)
		)
		return false;
		
		if(!(((BanFlags)&((0x4)))!=0)&&(End<__FullSecond))
		{
			(BanFlags=(BanFlags)|((0x8)));
			return false;
		}
		
		return true;
	}
	
	bool CheckIp(uint ip)
	{
		return((((BanFlags)&((0x2)))!=0)&&((Ip&Mask)==(ip&Mask)));
	}
	
	bool CheckId(uint id)
	{
		return((((BanFlags)&((0x1)))!=0)&&(Id==id));
	}
}

