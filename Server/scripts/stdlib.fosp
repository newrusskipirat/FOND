int RollVsSkill(Critter&cr,uint skillIndex,int bonus)
{
	int skVal=cr.Skill[skillIndex];
	int r=Random(1,100);
	
	if(skVal+bonus>=r)
	{
		if(Random(1,100)<=(((skVal-r)/10)+cr.StatBase[(14)]))
		return(3);
		else
		return(2);
	}
	else
	{
		if(Random(1,100)<=(r-skVal)/10)
		return(0);
		else
		return(1);
	}
}

