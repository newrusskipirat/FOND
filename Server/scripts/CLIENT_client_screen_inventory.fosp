	{
		Instance.ItemList.SelectItem(Index);
		
		if(click==(0))
		{
			!Rolled?Instance.ItemList.DropItem(Index):Instance.ItemList.RollUpItem(Index);
			Rolled=(Rolled?false:true);
		}    
		
	}
	
