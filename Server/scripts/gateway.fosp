			if(!entered&&(val==4)){
				if(!(cr.Quest[(705)]==1)){
					Warn(cr,guard,NeedRegainAccess());
				}
			}
		}
		return;
	}
	
	if((br.GetValue()==1)){
		if((cr.Quest[(705)]>=2)&&!(cr.Quest[(705)]==2))return;
		if((cr.Dir==4||cr.Dir==5||cr.Dir==0)){
			if(entered&&(val==4))Warn(cr,guard,OnlyApproved());
