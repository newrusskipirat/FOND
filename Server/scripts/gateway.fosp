			if(!entered&&(val==5)){Cry(cr,guard,AttackMsg());AttackAndCatch(cr,guard);}
		}
		if((cr.Dir==1||cr.Dir==2||cr.Dir==3)){
			
		}
		return;
	}
	
	if((br.GetValue()==2)){
		if((cr.Quest[(704)]==1)||(cr.Quest[(704)]==2)||(cr.Quest[(704)]==3))return;
		if((cr.Quest[(704)]==7)||(cr.Quest[(704)]==8))return;
		if((cr.Dir==4||cr.Dir==5||cr.Dir==0)){
			if(entered&&(val==4)){Warn(cr,guard,NoMovement());Stop(cr);}
