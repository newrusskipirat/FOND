void t_EnterHex(Critter&cr,Scenery&trigger,bool entered,uint8 dir,int val)
{
	if(cr.IsNpc())return;
	if(cr.Quest[(701)]!=0)return;
	
	GameVar@br=GetGlobalVar((7343));
	
	if((br.GetValue()==4))return;
	
	Critter@guard=GetClosestGuard(cr);
	
	if((cr.Quest[(705)]==10)){
		if((cr.Dir==4||cr.Dir==5||cr.Dir==0)){
			if(entered&&(val==4))Warn(cr,guard,PhraseGetOff());
			if(entered&&(val==5)){Cry(cr,guard,LastWarning());Stop(cr);}
			if(!entered&&(val==5)){Cry(cr,guard,AttackMsg());AttackAndCatch(cr,guard);}
		}
		if((cr.Dir==1||cr.Dir==2||cr.Dir==3)){
			if(!entered&&(val==5))Warn(cr,guard,DontGoBack());
		}
		return;
	}
	
	if((br.GetValue()==0)){
		if((cr.Quest[(705)]>=2))return;
		if((cr.Dir==4||cr.Dir==5||cr.Dir==0)){
			if((cr.Quest[(705)]==1)){
				if(!entered&&(val==4))cr.Say((6),"показывает пропуск");
			}
			if(!(cr.Quest[(705)]==1)){
				if(entered&&(val==4)){Warn(cr,guard,NeedAccess());Stop(cr);}
				if(entered&&(val==5)){Cry(cr,guard,LastWarning());Stop(cr);}
				if(!entered&&(val==5)){Cry(cr,guard,AttackMsg());AttackAndCatch(cr,guard);}
			}
