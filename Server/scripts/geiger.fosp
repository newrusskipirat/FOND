uint e_Geiger(uint[]@values)
{
	Item@geiger=GetItem(values[0]);
	if(not(@geiger!=null))
	return 0;
	
	if(geiger.Val1==0)
	return 0;
	if(geiger.Val2>0)
	geiger.Val2--; 
	
	if(geiger.Accessory==(1))
	{
		Critter@cr=GetCritter(geiger.CritId);
		if((@cr!=null))
		{
			if(cr.Stat[(74)]>0)
			cr.SayMsg((11),(3),(10354),"$rem"+cr.Stat[(74)]);
			if(geiger.Val2==0)
			{
				cr.SayMsg((11),(3),(10350));
				cr.SayMsg((11),(3),(10352));
				cr.PlaySound("GEIGER.ACM",true);
			}
		}
	}                       
	
	if(geiger.Val2==0)
	{
		geiger.Val1=0;
		geiger.Val3=0;
	}
	
	geiger.Update();
	return geiger.Val2==0?0:(((30)*__TimeMultiplier));
}
